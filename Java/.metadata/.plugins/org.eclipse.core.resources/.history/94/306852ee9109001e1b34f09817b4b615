public class ForTest {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		//for 
		for(int i = 0; i <= 5 ; i++) {
			System.out.println("i = " + i);
		}
		//1부터 10까지 합
		int sum1 = 0;
		for(int k = 0; k<=10 ; k++) {
			sum1 +=k;
		}
		System.out.println("1부터 10까지의 합" + sum1);
		//1부터 10까지 짝수합
		int sum2 = 0;
		for(int j = 0 ; j <=10; j++) {
			if(j % 2 == 0) {
				sum2 += j;
			}
		}
		System.out.println("sum2 =" + sum2);
		//for 중첩
		
		//구구단
		int sum3;
		for(int i =1; i <=8; i++) {
		    for(int k = 2 ; k<=9 ; k++) {
		    	
		    	System.out.println(j * i = sum3);
		    }
		}
		//별삼각형
	}

}
